{
  "name": "bookmark-dial",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "build": "esbuild ./src/main.ts --bundle --outfile=./build/main.js",
    "debug": "web-ext run",
    "watch": "concurrently \"esbuild ./src/main.ts --bundle --outfile=./build/main.js --watch\" \"tsc -noEmit -w\" \"postcss src/css -d build/css/ -w\""
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.3.0",
    "@types/firefox-webext-browser": "^94.0.0",
    "concurrently": "^6.5.1",
    "cssnano": "^5.0.14",
    "esbuild": "^0.14.8",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  }
}
