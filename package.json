{
  "name": "bookmark-dial",
  "packageManager": "yarn@3.1.1",
  "dependencies": {
    "@types/firefox-webext-browser": "^94.0.0",
    "concurrently": "^6.5.1",
    "esbuild": "^0.14.8",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  },
  "scripts": {
    "build": "esbuild ./src/main.ts --bundle --outfile=./build/main.js",
    "debug": "web-ext run",
    "watch": "concurrently \"esbuild ./src/main.ts --bundle --outfile=./build/main.js --watch\" \"tsc -noEmit -w\""
  }
}
